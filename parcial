import os
controlBln =  True
a = 0
e = 0
i = 0
o = 0
u = 0
A = 0
E = 0
I = 0
O = 0
U = 0
TOTAL_VOCALES = 0

while controlBln == True:
    os.system('cls')
    letrasStr = (input('ingrse algunas letras\n2.finalizar ->\n '))
    if letrasStr == 'a':
          a += 1
          TOTAL_VOCALES += 1
          
    if letrasStr == 'a':
          a += 1
          TOTAL_VOCALES += 1
    if letrasStr == 'e':
          e += 1
          TOTAL_VOCALES += 1 
    if letrasStr == 'i':
          i += 1
          TOTAL_VOCALES += 1  
    if letrasStr == 'o':
          o += 1
          TOTAL_VOCALES += 1                   
    if letrasStr == 'u':
          u += 1
          TOTAL_VOCALES += 1      
    if letrasStr == 'A':
          A += 1
          TOTAL_VOCALES += 1    
    if letrasStr == 'E':
          E += 1
          TOTAL_VOCALES += 1
    if letrasStr == 'I':
          I += 1
          TOTAL_VOCALES += 1
    if letrasStr == 'O':
          O += 1
          TOTAL_VOCALES += 1
    if letrasStr == 'U':
          U += 1
          TOTAL_VOCALES += 1
          os.system('cls') 
    if letrasStr== '2':
        controlBln = False
        print ('Vocales totales :',TOTAL_VOCALES)
        print('a:',a)
        print('e:',e)
        print('i:',i)
        print('o:',o)
        print('u:',u)
        print('A:',A)
        print('E:',E)
        print('I:',I)
        print('O:',O)
        print('U:',U)
        


print("hola, soy tu programa favorito para aprender a multiplicar <3")
numero = int(input(" ingrese un número entero POSITIVO, SOLO POSITIVOOO XD: "))

while numero <= 0:
    print("un numero valido tonto.")
    numero = int(input(" ingrese un número entero positivo XD: "))

print("su numero es:", numero)

print("esta es su tabla de multiplicar", numero, ":")

tabla = 1

while tabla <= 10:
    multiplicaciones = numero * tabla
    print(numero, "x", tabla, "=", multiplicaciones)
    tabla += 1

print("¡listo, <3!")



while True:
    print("hola convierte tus temperaturas facil y rapido <3\n1.de Celsius a Fahrenheit\n2.de Fahrenheit a Celsius\n3. Finalizar")

    numero = input("Ingrese el número de la opción que desea realizar: ")

    if numero == "1":
        temperatura = float(input(" temperatura en grados Celsius: "))
        fahrenheit = (temperatura * 9/5) + 32
        print(f"{temperatura} grados Celsius son equivalentes a {fahrenheit} grados Fahrenheit.\n")
    elif numero == "2":
        temperatura = float(input(" temperatura en grados Fahrenheit: "))
        celsius = (temperatura - 32) * 5/9
        print(f"{temperatura} grados Fahrenheit son equivalentes a {celsius} grados Celsius.\n")
    elif numero == "3":
        print("que bueno que te vas")
        break
    else:
        print("ingresa algo valido mano\n")
        
        print('MEEEEEEEEEEEEEEEELO')







